{
  "compilerOptions": {
    "target": "ESNext",
    "strictPropertyInitialization": false,
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@container/*": ["./src/container/*"],
      "@foo/*": ["./test/foo/*"]
    }
  },
  "include": ["./src/**/*", "./test/**/*"]
}
